-if current_user.nil? && current_member.nil?
 %div{:id=>"header"}
  %nav
   %ul{:class=>"nav"}
    %li=link_to "Sign In",sign_in_url
    %li=link_to "Pricing","pricing.html"
    %li=link_to "Blog","http://blog.requirementbox.com"
    %li=link_to "Home",root_url

  %div{:id=>"note"}
   %blockquote
    ="A cloud based requirements tool that is easy to use and simple to implement"
  =link_to image_tag("requirementbox_small.png",:alt=>"requirementbox.com logo",:width=>400,:height=>71),root_url
 %div{:id=>"contact_form"}
  -form_for @contact, :url => {:controller=>"homes",:action=>"thanks"} do |f|
   %fieldset
    %h2="Please use the form below to get in touch"
    =f.label "Please enter your full name: *"
    %br
    =f.text_field :name
    %div{:id=>"checkName",:class=>"signin_div"}
    %br
    =f.label "Please enter your email address: *"
    %br
    =f.text_field :email
    %div{:id=>"checkEmail",:class=>"signin_div"}
    %br
    =f.label "Please let us know why you are getting in touch: *"
    %br
    =f.select :reason,options_for_select(["Sales query","Support query","Other"],@contact.reason),{:prompt=>"Please select..."}
    %div{:id=>"checkReason",:class=>"signin_div"}
    %br
    =f.label "Please enter your comment or query: *"
    %br
    =f.text_area :query,:rows=>"4",:cols=>"50"
    %div{:id=>"checkQuery",:class=>"signin_div"}
    %br
    =f.submit "Submit Form"
