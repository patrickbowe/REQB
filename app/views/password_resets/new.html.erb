      <div><h3>Forgot Password</h3></div>
      <div class="loginForm">
         <% form_tag password_resets_path do %>
            <div class="rows">Please enter the email address you used to register:</div>
            <div class="rows">
               <label>Email:</label><br />
                  <span><%= text_field_tag "email" %><br /> </span>
            </div>
            <br />
            <div class="rows">
                  <label><%= submit_tag "Reset my password" %></label>
            </div>
         <% end %>
      </div>
